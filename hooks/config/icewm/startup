#!/bin/bash
# IceWM startup script
# Auto-launched by icewm-session

# Load X resources (fonts, colors, terminal settings)
if [ -f "$HOME/.Xresources" ]; then
    xrdb -merge "$HOME/.Xresources"
fi

# Start background manager in persistent mode
# icewmbg normally runs once and exits, but we need it to stay running
# Use a loop to keep it alive
while true; do
    icewmbg
    sleep 1
done &

# Add any other startup applications here
